
<h1 class= "profile-heading"> Profile </h1>

<div class= "show">
    <div> 
        <%= image_tag User.find(current_user.id).avatar, class: "profile-image" %>
    </div> 

    <p>
    <strong>Description:</strong>
    <%= current_user.description %>
    </p>

    <div>
    <h2>Interests:</h2>
    <% @interests.each do |interest| %>
    <%= interest.skill.name %>
    <% end %>

    </div>
    <div>
    <p> Reviews </p> 
    <% current_user.reviews.each do |review|%> 
        <%= review.content%>
    <% end %>
    </div> 

    <%=link_to "Edit", edit_user_registration_path, class:"btn btn-outline-primary" %> 

</div>













