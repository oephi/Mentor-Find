<h1 class="mentor-heading"><%= @category.titleize %></h1>

<div class="container1">

<div class="interests">
  <% if current_user %>
    <h2>Interests</h2>
    <ul>
      <%= form_with(url: interests_path, method: "post") do %> <%# path should work %>
        <%= text_field_tag :link, nil, name: "interest", placeholder: "Add an Interest" %>
        <%= submit_tag nil, style: "display: none;" %> 
      <% end %>

      <li><%= link_to "None", root_path(interest: "random") %></li>
      <li><%= link_to "All", root_path, class: "#{'active' if params[:tag] == nil} link" %></li>
      <% @interests.each do |interest| %>
        <li><%= link_to interest.name.titleize, root_path(interest: interest.name) %></li>
      <% end %>
    </ul>
  <% end %>
</div>


<div class="container2">

    <% @sample.each do |service| %>
    <div class="user-card">
        <%= link_to image_tag(service.user.avatar), profile_path %>
        <h4><%= link_to service.user.name, profile_path %></h4> <%# change to service_path %>
        <span><%= service.price %>$/h</span>
    </div>
<% end %>

</div>

</div>