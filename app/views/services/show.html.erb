<div class="profile-container">
<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @service.user.avatar, class: "profile-image" %>
</p>

<div class="services-show">
  <!-- <p>
    <strong>User:</strong>
    <%= @service.user %>
  </p> -->

  <p>
    <strong>Name:</strong>
    <%= @service.user.name %>
  </p>
  
  <p>
    <strong>Skill:</strong>
    <%= @service.skill.name %>
  </p>

  <p>
    <strong>Experience:</strong>
    <%= @service.experience.titleize %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @service.description %>
  </p>

  <p>
    <strong>Price:</strong>
    $<%= @service.price %>/h
  </p>

<% if @service.user_id == current_user.id %>
  <%= link_to 'Edit Service', edit_service_path(@service), class:"btn btn-outline-primary" %>
<% else %>
    <%= form_with url: "/charges" do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $5.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.application.credentials.stripe[:publishable] %>"
          data-description="A month's subscription"
          data-amount="500"
          data-locale="auto"
          data-email=<%= current_user.email %>></script>
<% end %>
  
<% end %>
  <%#= link_to 'Back', services_path %>

<div class="reviews-card-container">
<h1>Reviews</h1>


<% if @service.user_id != current_user.id %>
  <%= form_tag("/test", method: "get") do %>
    <%= text_area_tag(:q, nil, class: "form-control", placeholder: "Leave a Review", rows: 2) %>  <%# TODO: add logic here. if paid then form %>
    <%= submit_tag("Submit", class: "btn btn-lg btn-primary btn-block margin-bottom") %>
  <% end %>
<% end %>

<% @reviews.each do |review| %>
<div class="reviews-card">
  <div class="card">
    <div class="card-header">
      <a href = "#" ><%= review.service.user.name%></a> |
      <%= review.service.skill.name %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= review.content %></h5>
      <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
      <a href="#" class="btn btn-primary"><%= review.user.name %></a>
  </div>
</div>
<% end %>
</div>