<p id="notice"><%= notice %></p>

<h1>Services</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th></th>
      <th>User</th>
      <th>Skill</th>
      <th>Experience</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-striped">
    <% @services.each do |service| %>
      <tr>
        <td><%= image_tag service.user.avatar %></td>
        <td><%= service.user.name %></td>
        <td><%= service.skill.name %></td>
        <td><%= service.experience %></td>
        <td><%= service.description %></td>
        <td><%= service.price %></td>
        <td><%#= link_to 'Show', service %></td>
        <td><%#= link_to 'Edit', edit_service_path(service) %></td>
        <td><%#= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

