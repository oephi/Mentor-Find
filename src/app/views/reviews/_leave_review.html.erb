    <%= form.label :user_id, class: "sr-only" %>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div>
    <%= form.label :service_id, class: "sr-only" %>
    <%= form.hidden_field :service_id, value: @service.id %>
  </div>

