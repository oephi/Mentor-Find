      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content, class: "sr-only" %>
    <%= form.text_area :content, class: "form-control", placeholder: "Leave a Review", rows: 2 %>
