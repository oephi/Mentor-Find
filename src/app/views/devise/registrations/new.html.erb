<div class="devise-container">
<h1>Sign Up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Name"  %>
  </div>

  <div class="field">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :city, class: "sr-only" %>
    <%= f.text_field :city, class: "form-control", placeholder: "City" %>
  </div>

  <div class="field">
    <%= f.label :number, class: "sr-only" %>
    <%= f.telephone_field :phone, maxlength: 10, class: "form-control", placeholder: "Number" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sr-only" %>
    <% if @minimum_password_length %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (#{@minimum_password_length} characters min)", class: "form-control" %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
</form>


</div>
